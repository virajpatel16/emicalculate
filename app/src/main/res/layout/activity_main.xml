<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#1D1D1D"
    android:paddingBottom="@dimen/_50sdp"
    android:scrollbars="none"
    tools:context=".MainActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMI &amp; Stock Calculator"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find your perfect EMI, Predict potential returns with our powerful Stock Calculator"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />


            <LinearLayout
                android:id="@+id/emicalculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded"
                android:padding="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/emi" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EMI Calculator"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/right" />
            </LinearLayout>


        <LinearLayout
            android:id="@+id/loancompare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/loancompare" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="Loan Compare"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/right" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock Calculator"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/intraday"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:orientation="vertical"
            android:background="@drawable/rounded"
            android:layout_margin="@dimen/_4sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/intratreding"/>




                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:src="@drawable/right"/>





            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intraday Trading"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/delivery"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:orientation="vertical"
            android:layout_margin="@dimen/_4sdp"
            android:background="@drawable/rounded"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/deliverytrading"/>


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:src="@drawable/right"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Trading"

                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout> <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/feture"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:orientation="vertical"
            android:background="@drawable/rounded"
            android:layout_margin="@dimen/_4sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/future"/>




                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:src="@drawable/right"/>





            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feture Trading"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/option"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:orientation="vertical"
            android:layout_margin="@dimen/_4sdp"
            android:background="@drawable/rounded"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/option"/>


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:src="@drawable/right"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option Trading"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GST Calculator"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/gst"
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:orientation="vertical"
                android:background="@drawable/rounded"
                android:layout_margin="@dimen/_4sdp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:scaleType="centerCrop"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/gst"/>




                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:scaleType="centerCrop"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:src="@drawable/right"/>





                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GST Calculate"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/vat"
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:orientation="vertical"
                android:layout_margin="@dimen/_4sdp"
                android:background="@drawable/rounded"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:scaleType="centerCrop"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/vat"/>


                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:scaleType="centerCrop"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:src="@drawable/right"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VAT Calculate"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

</ScrollView>
