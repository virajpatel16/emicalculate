<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1D1D"
    tools:context=".Privacy_police">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1D1D1D"
        android:orientation="vertical"
        android:weightSum="10"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="#1D1D1D"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_20sdp"
                android:src="@drawable/arrow_left_alt_24dp_fill0_wght400_grad0_opsz24" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/privacy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.6"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1D1D1D"
                    android:padding="@dimen/_15sdp"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#1D1D1D"
            android:orientation="vertical"
            tools:ignore="MissingConstraints,NotSibling">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_1sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="horizontal">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/chk_privacy"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:text="I Agree With Terms &amp; Conditions"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                app:buttonTint="@color/footer_color" />

            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/BTN_decline"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:backgroundTint="#4C4141"
                    android:padding="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="Decline"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    app:shapeAppearanceOverlay="@style/RoundedCornerOverlay"
                    app:strokeColor="@color/white"
                    app:strokeWidth="@dimen/_2sdp" />

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/BTN_accept"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/footer_color"
                    android:padding="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="Accept"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    app:shapeAppearanceOverlay="@style/RoundedCornerOverlay" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>