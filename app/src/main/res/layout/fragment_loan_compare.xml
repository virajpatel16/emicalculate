<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1D1D"
    android:orientation="vertical"
    tools:context=".LoanCompareFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#1D1D1D">

        <ImageView
            android:id="@+id/loan_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"

            android:src="@drawable/arrow_left_alt_24dp_fill0_wght400_grad0_opsz24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="Loan Compare"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:background="@drawable/rounded"
                    android:backgroundTint="@color/new_color"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_13sdp"
                        android:text="loan 1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_13sdp"
                        android:text="loan 2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loan Amount -1*"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/amount1EditText"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"

                        android:textColorHint="@color/white"

                        android:background="@drawable/bg_app"
                        android:drawableRight="@drawable/currency_rupee_24dp_fill0_wght400_grad0_opsz24"
                        android:hint="Amount-1"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Interest Rate - 1*"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/interestRate1EditText"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_app"



                        android:textColorHint="@color/white"
                        android:paddingLeft="@dimen/_10sdp"
                        android:drawableRight="@drawable/percent_24dp_fill0_wght400_grad0_opsz24"
                        android:hint="Amount-1"
                        android:inputType="numberDecimal"

                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Tenure -1*"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/tenure1EditText"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_app"

                        android:textColorHint="@color/white"

                        android:drawableRight="@drawable/calendar_month_24dp_fill0_wght400_grad0_opsz24"
                        android:hint="Amount-1*"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/_5sdp"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loan Amount -1*"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/amount2EditText"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"

                        android:textColorHint="@color/white"
                        android:paddingLeft="@dimen/_10sdp"
                        android:background="@drawable/bg_app"
                        android:drawableRight="@drawable/currency_rupee_24dp_fill0_wght400_grad0_opsz24"
                        android:hint="Amount-1"
                        android:inputType="numberDecimal"

                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="LInterest Rate - 1*"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/interestRate2EditText"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"

                        android:textColorHint="@color/white"

                        android:background="@drawable/bg_app"
                        android:drawableRight="@drawable/percent_24dp_fill0_wght400_grad0_opsz24"
                        android:hint="Amount-1"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Tenure -2*"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/tenure2EditText"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColorHint="@color/white"

                        android:background="@drawable/bg_app"
                        android:drawableRight="@drawable/calendar_month_24dp_fill0_wght400_grad0_opsz24"
                        android:hint="Amount-1"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/white" />


                </LinearLayout>


            </LinearLayout>


            <RadioGroup
                android:id="@+id/dateRadioGroup"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/toggle"
                android:elevation="@dimen/_10sdp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/tv_years"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/togglewidget"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Year"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/tv_months"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/togglewidget"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Month"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_loan_reset"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:backgroundTint="#26C4C4C4"

                    android:padding="@dimen/_1sdp"
                    android:text="@string/btn_reset"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp" />

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_loan_calculate"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/new_color"

                    android:padding="@dimen/_1sdp"
                    android:text="@string/btn_calculate"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resultloancompare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_margin="@dimen/_13sdp"
                        android:background="@drawable/bg_app"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"

                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="1"

                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:text="Monthly Emi-1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/edt_monthly_emi1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:text="Monthly Emi-1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/edt_monthly_emi2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp"
                                    android:textStyle="bold" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:text="EMI Difrence"
                                android:textColor="@color/footer_color"

                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/edt_emi_difrence"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:text=""
                                android:textColor="@color/footer_color"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>


                    </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_margin="@dimen/_13sdp"
                        android:background="@drawable/bg_app"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"

                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="1"

                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:text="Interest Payble-1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/edt_interest_payble1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:text="Interest Payble-2"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/edt_interest_payble2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp"
                                    android:textStyle="bold" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:text="Interest Diffrence"
                                android:textColor="@color/footer_color"

                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/edt_interest_difrence"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:text=""
                                android:textColor="@color/footer_color"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>


                    </LinearLayout> <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_margin="@dimen/_13sdp"
                        android:background="@drawable/bg_app"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"

                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="1"

                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:text="Total Payble-1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/edt_total_payble1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:text="Total Payble-2"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/edt_total_payble2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp"
                                    android:textStyle="bold" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:text="Payment Difrence"
                                android:textColor="@color/footer_color"

                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/edt_payment_diffrence"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:text=""
                                android:textColor="@color/footer_color"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>


                    </LinearLayout>








            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>